<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.2rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  }

  .tax-info {
    display: none;
  }

  /* Mobile and tablet responsiveness */
  @media (max-width: 768px) {
    #filters {
      display: none; /* Hide filters on smaller screens */
    }

    .listing-card {
      margin-bottom: 1.5rem; /* Adjust spacing between listing cards */
    }

    .card-img-top {
      height: 15rem; /* Adjust image size on smaller screens */
    }

    .card-body {
      padding: 1rem; /* Padding adjustments for card body */
    }
  }

  /* Desktop screens (medium and larger) */
  @media (min-width: 769px) {
    .listing-card {
      width: 100%; /* Allow cards to be full-width on medium screens and larger */
    }

    .card-img-top {
      height: 20rem; /* Image height for desktop */
    }

    .card-body {
      padding: 1.5rem; /* Padding for desktop */
    }
  }
</style>

<body>
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire fa-lg"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed fa-lg"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city fa-lg"></i></div>
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain fa-lg"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming fa-lg"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground fa-lg"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cow fa-lg"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-snowflake fa-lg"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-gopuram fa-lg"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bowl-food fa-lg"></i></div>
        <p>Amazing food</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-sailboat fa-lg"></i></div>
        <p>Boating</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-baseball-bat-ball fa-lg"></i></div>
        <p>Sports</p>
      </div>
      <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
      </div>
    </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% if (allListings.length === 0) { %>
        <h3 class="text-center mt-4">No listings match your search.</h3>
      <% } else { %>
        <% for(let listing of allListings) { %>
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card" style="width: 25rem;">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <p class="card-text"><b><%= listing.title %></b>
                  <br>&#8377;<%= listing.price.toLocaleString("en-IN") %> <i class="tax-info">&nbsp;&nbsp;+18% GST</i></p>
              </div>
            </div>
          </a>
        <% } %>
      <% } %>
    </div>
    
    
</ul>
</body>

<script>
  let taxSwitch=document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo=document.getElementsByClassName("tax-info");
    for(info of taxInfo)
  {
    if(info.style.display!="inline")
  {
    info.style.display="inline";
  }
  else{
    info.style.display="none";
  }
  }
  })
</script>